
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <!-- Basic Page Info -->
    <meta charset="utf-8">
    <title>Dia Supermarket Admin - @ViewBag.title</title>

    <!-- Site favicon -->
    <link rel="icon" type="image/png" sizes="32x32" href="~/Templates/Admin/vendors/images/logo.png">

    <!-- Mobile Specific Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&amp;display=swap" rel="stylesheet">
    <!-- CSS -->
    <link rel="stylesheet" type="text/css" href="~/Templates/Admin/vendors/styles/core.css">
    <link rel="stylesheet" type="text/css" href="~/Templates/Admin/vendors/styles/icon-font.min.css">
    <link rel="stylesheet" type="text/css" href="~/Templates/Admin/src/plugins/datatables/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" type="text/css" href="~/Templates/Admin/src/plugins/datatables/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" type="text/css" href="~/Templates/Admin/vendors/styles/style.css">
</head>
<body class="header-white sidebar-light">
    @*<div class="pre-loader">
        <div class="pre-loader-box">
            <div class="loader-logo"><img src="~/Templates/Admin/vendors/images/logo.png" alt=""></div>
            <div class='loader-progress' id="progress_div">
                <div class='bar' id='bar1'></div>
            </div>
            <div class='percent' id='percent1'>0%</div>
            <div class="loading-text">
                Loading...
            </div>
        </div>
    </div>*@

    <div class="header">
        <div class="header-left">
            <div class="menu-icon dw dw-menu"></div>
            <div class="search-toggle-icon dw dw-search2" data-toggle="header_search"></div>
            <div class="header-search">
                <form>
                    <div class="form-group mb-0">
                        <i class="dw dw-search2 search-icon"></i>
                        <input type="text" class="form-control search-input" placeholder="Search Here">
                        <div class="dropdown">
                            <a class="dropdown-toggle no-arrow" href="#" role="button" data-toggle="dropdown">
                                <i class="ion-arrow-down-c"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right">
                                <div class="form-group row">
                                    <label class="col-sm-12 col-md-2 col-form-label">From</label>
                                    <div class="col-sm-12 col-md-10">
                                        <input class="form-control form-control-sm form-control-line" type="text">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-12 col-md-2 col-form-label">To</label>
                                    <div class="col-sm-12 col-md-10">
                                        <input class="form-control form-control-sm form-control-line" type="text">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-12 col-md-2 col-form-label">Subject</label>
                                    <div class="col-sm-12 col-md-10">
                                        <input class="form-control form-control-sm form-control-line" type="text">
                                    </div>
                                </div>
                                <div class="text-right">
                                    <button class="btn btn-primary">Search</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="header-right" style="display: flex; align-items: center; padding-right: 2%;">
            Hello,&nbsp;<div class="weight-600 font-20 text-blue text-capitalize">@Session["admin_name"]</div>
        </div>
    </div>

    <div class="left-side-bar">
        <div class="brand-logo">
            <a href="@Url.Action("Index", "Admin")">
                <img src="~/Templates/Admin/vendors/images/logo.png" alt="" class="dark-logo">
                <img src="~/Templates/Admin/vendors/images/logo.png" alt="" class="light-logo">
            </a>
            <div class="close-sidebar" data-toggle="left-sidebar-close">
                <i class="ion-close-round"></i>
            </div>
        </div>
        <div class="menu-block customscroll">
            <div class="sidebar-menu">
                <ul id="accordion-menu">
                    <li>
                        <a href="@Url.Action("Index", "Admin")" class="dropdown-toggle no-arrow">
                            <i class="micon icon-copy fa fa-home" aria-hidden="true"></i><span class="mtext">Home</span>
                        </a>
                    </li>
                    <li>
                        <a href="#" class="dropdown-toggle no-arrow">
                            <span class="micon icon-copy fa fa-shopping-bag"></span><span class="mtext">Orders</span>
                        </a>
                    </li>
                    <li class="dropdown">
                        <a href="javascript:;" class="dropdown-toggle">
                            <span class="micon icon-copy ion-ios-pricetag"></span><span class="mtext">Products</span>
                        </a>
                        <ul class="submenu">
                            <li><a href="@Url.Action("AddProduct", "Admin")">Add Product</a></li>
                            <li><a href="@Url.Action("ProductsList", "Admin")">All Products</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="javascript:;" class="dropdown-toggle">
                            <span class="micon icon-copy fa fa-hashtag"></span><span class="mtext">Categories</span>
                        </a>
                        <ul class="submenu">
                            <li><a href="#">All Categories</a></li>
                            <li><a href="#">Add Category</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="javascript:;" class="dropdown-toggle">
                            <span class="micon icon-copy fa fa-group"></span><span class="mtext">Customers</span>
                        </a>
                        <ul class="submenu">
                            <li><a href="#">All Customers</a></li>
                            <li><a href="#">Add Customer</a></li>
                        </ul>
                    </li>

                    <li>
                        <div class="dropdown-divider"></div>
                    </li>
                    <li>
                        <div class="sidebar-small-cap">Extra</div>
                    </li>
                    <li>
                        <a href="javascript:;" class="dropdown-toggle">
                            <span class="micon icon-copy fa fa-cogs"></span><span class="mtext">Profile</span>
                        </a>
                        <ul class="submenu">
                            <li><a href="@Url.Action("EditProfile", "Admin")">Edit Profile</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="@Url.Action("Logout", "Admin")" class="dropdown-toggle no-arrow">
                            <span class="micon dw dw-logout"></span><span class="mtext">Log Out</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="mobile-menu-overlay"></div>

    <div class="main-container">
        <div class="pd-ltr-20">

            @RenderBody()

            <div class="footer-wrap pd-20 mb-20 card-box">
                <img src="~/Templates/Admin/vendors/images/logo.png" style="height: 30px; margin-right: 5px" /> Dia Supermarket - &copy; All Rights Reserved @DateTime.Now.Year
            </div>
        </div>
    </div>
    <!-- js -->
    <script src="~/Templates/Admin/vendors/scripts/core.js"></script>
    <script src="~/Templates/Admin/vendors/scripts/script.min.js"></script>
    <script src="~/Templates/Admin/vendors/scripts/process.js"></script>
    <script src="~/Templates/Admin/vendors/scripts/layout-settings.js"></script>
    <script src="~/Templates/Admin/src/plugins/apexcharts/apexcharts.min.js"></script>
    <script src="~/Templates/Admin/src/plugins/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/Templates/Admin/src/plugins/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Templates/Admin/src/plugins/datatables/js/dataTables.responsive.min.js"></script>
    <script src="~/Templates/Admin/src/plugins/datatables/js/responsive.bootstrap4.min.js"></script>
    <script src="~/Templates/Admin/vendors/scripts/dashboard.js"></script>

    <script>
        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
</body>
</html>