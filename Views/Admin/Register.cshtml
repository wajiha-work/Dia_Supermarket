@model Dia_Supermarket.Models.tb_Admins
<!DOCTYPE html>
<html>
<head>
    <!-- Basic Page Info -->
    <meta charset="utf-8">
    <title>Dia Supermarket - Admin Registeration</title>

    <!-- Site favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="~/Templates/Admin/vendors/images/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/Templates/Admin/vendors/images/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/Templates/Admin/vendors/images/favicon-16x16.png">

    <!-- Mobile Specific Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&amp;display=swap" rel="stylesheet">
    <!-- CSS -->
    <link rel="stylesheet" type="text/css" href="~/Templates/Admin/vendors/styles/core.css">
    <link rel="stylesheet" type="text/css" href="~/Templates/Admin/vendors/styles/icon-font.min.css">
    <link rel="stylesheet" type="text/css" href="~/Templates/Admin/src/plugins/jquery-steps/jquery.steps.css">
    <link rel="stylesheet" type="text/css" href="~/Templates/Admin/vendors/styles/style.css">

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-119386393-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'UA-119386393-1');
    </script>
</head>

<body class="login-page">
    <div class="login-header box-shadow">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <div class="brand-logo">
                <a href="@Url.Action("Login", "Admin")">
                    <img src="~/Templates/Admin/vendors/images/logo.png" alt="">
                </a>
            </div>
            <div class="login-menu">
                <ul>
                    <li><a href="@Url.Action("Login", "Admin")">Login</a></li>
                </ul>
            </div>
        </div>
    </div>


    <div class="register-page-wrap d-flex align-items-center flex-wrap justify-content-center">
        <div class="container">
            <div class="align-items-center">



                <!-- Form grid Start -->
                <div class="pd-20 card-box mb-30">
                    <div class="clearfix">
                        <div class="pull-left">
                            <h4 class="text-blue h4">Register as Admin</h4>
                            <p class="mb-30">Please fill all fields to proceed</p>
                        </div>
                        <div class="pull-right">

                        </div>
                    </div>
                    @using (Html.BeginForm("Register", "Admin", FormMethod.Post))
                    {
                        <div class="row">
                            <div class="col-md-4 col-sm-12">
                                <div class="form-group">
                                    <label>First Name</label>
                                    @Html.EditorFor(model => model.first_name, new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            placeholder = "First Name"@*, required = "required"*@ 
                                        }
                                    })
                                    @Html.ValidationMessageFor(model => model.first_name, "", new { @class = "text-danger small font-weight-bold" })
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-12">
                                <div class="form-group">
                                    <label>Last Name</label>
                                    @Html.EditorFor(model => model.last_name, new { htmlAttributes = new { @class = "form-control", placeholder = "Last Name" } })
                                    @Html.ValidationMessageFor(model => model.last_name, "", new { @class = "text-danger small font-weight-bold" })
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-12">
                                <div class="form-group">
                                    <label>NIC Number</label>
                                    @Html.EditorFor(model => model.NIC_num, new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            placeholder = "NIC Number"@*, required = "required"*@ }
                                    })
                                    @Html.ValidationMessageFor(model => model.NIC_num, "", new { @class = "text-danger small font-weight-bold" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 col-sm-12">
                                <div class="form-group">
                                    <label>Email Address</label>
                                    @Html.EditorFor(model => model.email_address, new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            type = "email",
                                            placeholder = "Email Address"@*, required = "required"*@ }
                                    })
                                    @Html.ValidationMessageFor(model => model.email_address, "", new { @class = "text-danger small font-weight-bold" })
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-12">
                                <div class="form-group">
                                    <label>Password</label>
                                    <div class="row">
                                        <div class="col-6">
                                            @Html.EditorFor(model => model.admin_password, new
                                            {
                                                htmlAttributes = new
                                                {
                                                    @class = "form-control",
                                                    type = "password",
                                                    placeholder = "Password"@*, required = "required"*@}
                                            })
                                            @Html.ValidationMessageFor(model => model.admin_password, "", new { @class = "text-danger small font-weight-bold" })
                                        </div>
                                        <div class="col-6">
                                            @Html.EditorFor(model => model.confirm_password, new
                                            {
                                                htmlAttributes = new
                                                {
                                                    @class = "form-control",
                                                    type = "password",
                                                    placeholder = "Confirm Password"@*, required = "required"*@}
                                            })
                                            @Html.ValidationMessageFor(model => model.confirm_password, "", new { @class = "text-danger small font-weight-bold" })
                                        </div>
                                    </div>
                                    
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-12">
                                <div class="form-group">
                                    <label>Contact Number</label>
                                    @Html.EditorFor(model => model.contact_num, new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            type = "tel",
                                            placeholder = "Contact Number as 0333(-)1234567"@*, required = "required"*@ }
                                    })
                                    @Html.ValidationMessageFor(model => model.contact_num, "", new { @class = "text-danger small font-weight-bold" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 col-sm-12">
                                <div class="form-group">
                                    <label>Gender</label>
                                    <div>
                                        <div class="custom-control custom-radio custom-control-inline pb-0">
                                            @Html.RadioButtonFor(model => model.gender, "male", new { @class = "custom-control-input", id = "male" })
                                            <label class="custom-control-label" for="male">Male</label>
                                        </div>
                                        <div class="custom-control custom-radio custom-control-inline pb-0">
                                            @Html.RadioButtonFor(model => model.gender, "female", new { @class = "custom-control-input", id = "female" })
                                            <label class="custom-control-label" for="female">Female</label>
                                        </div>
                                        @Html.ValidationMessageFor(model => model.gender, "", new { @class = "text-danger small font-weight-bold" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-12">
                                <div class="form-group">
                                    <label>Date of Birth</label>
                                    @Html.EditorFor(model => model.DOB, new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control date-picker",
                                            placeholder = "Select Date of Birth"@*, required = "required"*@ }
                                    })
                                    @Html.ValidationMessageFor(model => model.DOB, "", new { @class = "text-danger small font-weight-bold" })
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-12">
                                <div class="form-group">
                                    <label>Nationality</label>
                                    @Html.EditorFor(model => model.nationality, new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            placeholder = "Nationality"@*, required = "required"*@ }
                                    })
                                    @Html.ValidationMessageFor(model => model.nationality, "", new { @class = "text-danger small font-weight-bold" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 col-sm-12">
                                <div class="form-group">
                                    <label>Address</label>
                                    @Html.EditorFor(model => model.user_address, new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            placeholder = "Address"@*, required = "required"*@ }
                                    })
                                    @Html.ValidationMessageFor(model => model.user_address, "", new { @class = "text-danger small font-weight-bold" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 col-sm-12">
                                <div class="form-group">
                                    <label>City</label>
                                    @Html.EditorFor(model => model.city, new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            placeholder = "City"@*, required = "required"*@ }
                                    })
                                    @Html.ValidationMessageFor(model => model.city, "", new { @class = "text-danger small font-weight-bold" })
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-12">
                                <div class="form-group">
                                    <label>Country</label>
                                    @Html.EditorFor(model => model.country, new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            placeholder = "Country"@*, required = "required"*@ }
                                    })
                                    @Html.ValidationMessageFor(model => model.country, "", new { @class = "text-danger small font-weight-bold" })
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-12">
                                <div class="form-group">
                                    <label>Postal Code</label>
                                    @Html.EditorFor(model => model.postal_code, new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            type = "number",@*min="10000", max = "99999",*@ placeholder = "Postal Code"@*, required = "required"*@ }
                                    })
                                    @Html.ValidationMessageFor(model => model.postal_code, "", new { @class = "text-danger small font-weight-bold" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 col-sm-12">
                                <div class="pull-left"></div>
                                <div class="pull-right">
                                    <button class="btn btn-primary btn-sm scroll-click"><i class="icon-copy fa fa-plus-square" aria-hidden="true"></i> &nbsp;REGISTER</button>
                                </div>
                            </div>
                        </div>
                     }
                </div>
                <!-- Form grid End -->

            </div>
        </div>
    </div>


    <!-- js -->
    <script src="~/Templates/Admin/vendors/scripts/core.js"></script>
    <script src="~/Templates/Admin/vendors/scripts/script.min.js"></script>
    <script src="~/Templates/Admin/vendors/scripts/process.js"></script>
    <script src="~/Templates/Admin/vendors/scripts/layout-settings.js"></script>
    <script src="~/Templates/Admin/src/plugins/jquery-steps/jquery.steps.js"></script>
    <script src="~/Templates/Admin/vendors/scripts/steps-setting.js"></script>
</body>
</html>