@model Dia_Supermarket.Models.tb_Products

@{
    ViewBag.Title = "Delete Product";
    Layout = "~/Views/Shared/Admin/_LayoutBasic_Admin.cshtml";
}


<div class="card-box pd-20 mb-30 px-2">
    <div class="clearfix">
        <div class="pull-left">
            <h4 class="text-blue h4">Delete Product</h4>
            <p class="mb-30">Are you sure you want to delete this product?</p>
        </div>
        <div class="pull-right">
            <a href="@Url.Action("ProductsList", "Admin")" class="btn btn-primary btn-sm scroll-click"><span class="icon-copy ion-ios-pricetag"></span> &nbsp;ALL PRODUCTS</a>
        </div>
    </div>

    <table class="table details-product">

        <tbody>
            <tr>
                <th>Product Name</th>
                <td>@Html.DisplayFor(model => model.product_name)</td>
            </tr>
            <tr>
                <th>Product Image</th>
                <td><img src="@Html.DisplayFor(model => model.product_image)" style="max-height: 200px" /></td>
            </tr>
            <tr>
                <th>Price</th>
                <td>PKR @Html.DisplayFor(model => model.price)</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>@Html.DisplayFor(model => model.stock) Units</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>@Html.DisplayFor(model => model.tb_Categories.cat_name)</td>
            </tr>
            <tr>
                <th>SKU</th>
                <td>@Html.DisplayFor(model => model.sku)</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>@Html.DisplayFor(model => model.long_description)</td>
            </tr>
            <tr>
                <th>Last Updated</th>
                <td>@Html.DisplayFor(model => model.updated_at)</td>
            </tr>
            <tr>
                <th>Updated By</th>
                <td>@Html.DisplayFor(model => model.tb_Admins.first_name) @Html.DisplayFor(model => model.tb_Admins.last_name)</td>
            </tr>
            <tr>
                <th>Inserted at</th>
                <td>@Html.DisplayFor(model => model.inserted_at)</td>
            </tr>
        </tbody>
    </table>

    <div class="clearfix">
        <div class="pull-left">
        </div>
        <div class="pull-right">
            <button class="btn btn-primary btn-sm scroll-click" data-toggle="modal" data-target="#confirmation-modal"><i class="icon-copy fa fa-trash" aria-hidden="true"></i> &nbsp;DELETE PRODUCT</button>
        </div>
    </div>

    <!-- Modal starts here -->
    <div class="modal fade" id="confirmation-modal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-body text-center font-14">
                    <h4 class="padding-top-30 mb-30 weight-500">Are you sure you want to delete this product?</h4>
                    <div class="padding-bottom-30 row" style="max-width: 170px; margin: 0 auto;">
                        <div class="col-6">
                            <button type="button" class="btn btn-secondary border-radius-100 btn-block confirmation-btn" data-dismiss="modal"><i class="fa fa-times"></i></button>
                            CANCEL
                        </div>
                        <div class="col-6">
                            @using (Html.BeginForm("DeleteProduct", "Admin", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-primary border-radius-100 btn-block confirmation-btn"><i class="icon-copy fa fa-trash" aria-hidden="true"></i></button>
                            }
                            DELETE
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal ends here -->

</div>
